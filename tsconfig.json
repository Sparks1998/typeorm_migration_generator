{
	"compilerOptions" : {
		"lib"                          : [
			"es5" ,
			"es6"
		] ,
		"emitDecoratorMetadata"        : true ,
		"module"                       : "commonjs" ,
		"esModuleInterop"              : true ,
		"target"                       : "es6" ,
		"noImplicitAny"                : true ,
		"moduleResolution"             : "node" ,
		"sourceMap"                    : true ,
		"outDir"                       : "dist" ,
		"baseUrl"                      : "." ,
		"experimentalDecorators"       : true ,
		"resolveJsonModule"            : true ,
		"allowSyntheticDefaultImports" : true ,
		"typeRoots"                    : [ "node_modules/@types" ] ,
		"paths"                        : {
			"*" : [
				"node_modules/*"
			]
		}
	} ,
	"include"         : [
		"src/**/*"
	] ,
	"exclude"         : [
		"node_modules"
	]
}
